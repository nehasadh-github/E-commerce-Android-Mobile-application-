<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.home.HomeFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="0dp"
    android:background="@color/theme_color"
    android:id="@+id/search_bar"
    tools:ignore="MissingConstraints">

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:id="@+id/search_text"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/search_bar"
        app:layout_constraintLeft_toLeftOf="@+id/search_bar"
        app:layout_constraintRight_toRightOf="@+id/search_bar"
        android:hint="Enter Item Name"
        android:paddingLeft="40dp"
        android:inputType="text"
        >
    </EditText>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/search_bar"
        app:layout_constraintLeft_toLeftOf="@+id/search_text"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_magnifying_glass"
        android:paddingLeft="5dp"
        >
    </ImageView>

    <AutoCompleteTextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:id="@+id/search_place"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/search_text"
        app:layout_constraintLeft_toLeftOf="@+id/search_bar"
        app:layout_constraintRight_toRightOf="@+id/search_bar"
        android:hint="(Optional) Enter Location"
        android:paddingLeft="40dp"
        android:inputType="text"
        android:imeOptions="actionGo"
        >
    </AutoCompleteTextView>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_place"
        app:layout_constraintRight_toRightOf="@id/search_place"
        app:layout_constraintBottom_toTopOf="@id/distanceMi"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        tools:ignore="MissingConstraints"
        android:id="@+id/icPlace"
        android:clickable="true"
        >
    </ImageView>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/search_place"
        app:layout_constraintLeft_toLeftOf="@+id/search_place"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_magnifying_glass"
        android:paddingLeft="5dp"
        >
    </ImageView>
    <!--
    <fragment android:id="@+id/autocomplete_fragment"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        app:layout_constraintTop_toBottomOf="@+id/search_text"
        app:layout_constraintLeft_toLeftOf="@+id/search_bar"
        app:layout_constraintRight_toRightOf="@+id/search_bar"
        android:layout_marginTop="20dp"
        />
-->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/distanceMi"
        app:layout_constraintTop_toBottomOf="@+id/search_place"
        app:layout_constraintRight_toRightOf="@+id/search_bar"
        app:layout_constraintLeft_toLeftOf="@+id/search_bar"
        app:layout_constraintBottom_toBottomOf="@id/search_bar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ToggleButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="300m"
                android:textOff="300m"
                android:textOn="300m"
                android:background="@drawable/button_select"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto"
                >
            </ToggleButton>
            <ToggleButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="500m"
                android:textOff="500m"
                android:textOn="500m"
                android:background="@drawable/button_select"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto"
                >
            </ToggleButton>
            <ToggleButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="1000m"
                android:textOff="1000m"
                android:textOn="1000m"
                android:background="@drawable/button_select"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto"
                >
            </ToggleButton>
            <ToggleButton
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="2500m"
                android:textOff="2500m"
                android:textOn="2500m"
                android:background="@drawable/button_select"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto"
                >
            </ToggleButton>
            <ToggleButton
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="5000m"
                android:textOff="5000m"
                android:textOn="5000m"
                android:background="@drawable/button_select"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto"
                >
            </ToggleButton>
            <ToggleButton
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="10km"
                android:textOff="10km"
                android:textOn="10km"
                android:background="@drawable/button_select"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto"
                >
            </ToggleButton>
            <ToggleButton
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="25km"
                android:textOff="25km"
                android:textOn="25km"
                android:background="@drawable/button_select"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto"
                >
            </ToggleButton>
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:text="Categories"
    app:layout_constraintTop_toBottomOf="@id/search_bar"
    android:textSize="16sp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:id="@+id/category_text"
    >
</TextView>
<View
    android:layout_width="380dp"
    android:layout_height="4dp"
    android:background="@color/gray"
    tools:ignore="MissingConstraints"
    app:layout_constraintTop_toBottomOf="@+id/category_text"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/line_break"
    />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="420dp"
    app:layout_constraintTop_toBottomOf="@+id/line_break"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="10dp"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
<androidx.cardview.widget.CardView
    android:id="@+id/card_view1"
    android:layout_width="180dp"
    android:layout_height="170dp"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="4dp"
    tools:ignore="MissingConstraints"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:clickable="true"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:clickable="false"
        android:scaleType="fitXY"
        android:src="@drawable/furniture" />

    <TextView
        android:id="@+id/info_text1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:text="Furniture"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20dp"
        android:clickable="false"
        />
</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view2"
    android:layout_width="180dp"
    android:layout_height="170dp"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="4dp"
    tools:ignore="MissingConstraints"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:clickable="true"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:src="@drawable/textbook"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/info_text2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:text="Textbooks"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20dp"
        />
</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/card_view3"
    android:layout_width="180dp"
    android:layout_height="170dp"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="4dp"
    tools:ignore="MissingConstraints"
    app:layout_constraintTop_toBottomOf="@+id/card_view1"
    app:layout_constraintLeft_toLeftOf="parent"
    android:clickable="true"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:src="@drawable/car"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/info_text3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:text="Transportation"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20dp"
        />
</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view4"
    android:layout_width="180dp"
    android:layout_height="170dp"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="4dp"
    tools:ignore="MissingConstraints"
    app:layout_constraintTop_toBottomOf="@+id/card_view2"
    app:layout_constraintRight_toRightOf="parent"
    android:clickable="true"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:src="@drawable/school_supplies"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/info_text4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:text="School Supplies"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20dp"
        />
</androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view5"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_margin="15dp"
            card_view:cardCornerRadius="4dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/card_view3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/macbook"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/info_text5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:text="Computer"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view6"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_margin="15dp"
            card_view:cardCornerRadius="4dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/card_view4"
            app:layout_constraintRight_toRightOf="parent"
            android:clickable="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/packaging"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/info_text6"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:text="Miscellaneous"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
