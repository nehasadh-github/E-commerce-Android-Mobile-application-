<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/light_gray"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_profile"
        android:layout_margin="20dp">
    </ImageView>
    <TextView
        android:id="@+id/tv_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_color"
        android:layout_marginBottom="20dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:fontFamily="@font/roboto"
        android:padding="30dp">
    </TextView>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/theme_color"
        android:textStyle="italic"
        android:textSize="22sp"
        android:layout_gravity="right"
        android:paddingTop="45dp"
        android:paddingRight="30dp">
    </TextView>
</FrameLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_mail_outline"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:id="@+id/email"
        >
    </ImageView>

    <TextView
        android:id="@+id/email_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/email"
        android:text="Email Address"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text"
        android:fontFamily="@font/roboto"
        android:layout_toRightOf="@+id/email"
        android:textSize="18sp"
        android:id="@+id/tv_email_profile">

    </TextView>
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_phone"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:id="@+id/phone"
        >
    </ImageView>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/phone"
        android:text="Phone Number"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:id="@+id/phone_num_text"
        >
    </TextView>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_num_text"
        android:layout_toRightOf="@+id/phone"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:id="@+id/tv_phone_profile">
    </TextView>
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/paymentcell"
    >

    <ImageView
        android:id="@+id/payment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_payment">

    </ImageView>

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/payment"
        android:fontFamily="@font/roboto"
        android:text="Payment Method"
        android:textSize="18sp"
        android:textStyle="bold">

    </TextView>
</RelativeLayout>
<RelativeLayout
    android:id="@+id/addresscell"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_address"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:id="@+id/address"
        >
    </ImageView>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/address"
        android:text="Address"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/address_text"
        >
    </TextView>

    <TextView
        android:id="@+id/tv_address_profile"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/address_text"
        android:layout_toRightOf="@+id/address"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"></TextView>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/logout_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_logout"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/create_button_red"
            android:fontFamily="@font/roboto"
            android:onClick="createAccount"
            android:text="Logout"
            android:textColor="@color/white"
            android:textSize="18sp">

        </androidx.appcompat.widget.AppCompatButton>
    </RelativeLayout>
</LinearLayout>