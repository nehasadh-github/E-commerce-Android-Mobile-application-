<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textColor">@color/bicButtonText</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="HeaderText" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bicPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleText" parent="@style/MediumText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="DateSpinner">
        <item name="android:layout_height">@dimen/field_height</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_width">@dimen/date_spinner_width</item>
    </style>

    <style name="EditText">
        <item name="android:layout_height">@dimen/field_height</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="FieldImage">
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">@dimen/field_image_padding_bottom</item>
        <item name="android:paddingTop">@dimen/field_image_padding_top</item>
    </style>

    <style name="ProcessingText" parent="@style/MediumText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/processing_text_size</item>
        <item name="android:padding">@dimen/processing_text_padding</item>
    </style>

    <style name="SecureText" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/bicSecureText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SecureTextBold" parent="@style/SecureText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>